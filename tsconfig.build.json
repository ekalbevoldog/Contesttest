{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "**/*.test.ts"]
}