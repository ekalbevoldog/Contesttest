{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES2020",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": false,
    "sourceMap": false,
    "inlineSourceMap": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client/**/*", "node_modules", "**/*.test.ts", "dist"]
}